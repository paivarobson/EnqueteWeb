@model EnqueteWeb.Models.Resposta
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>EnqueteWeb</h1>
    <h2>Você teria coragem de fazer uma viagem sem volta para Marte?</h2>
    <h4>Preencha os campos e marque sua resposta</h4>
    <form method="POST">
        <div>
            <label for="txtNome">Seu Nome:</label><br>
            <input type="text" name="Nome" id="txtNome">
        </div>
        <div>
            <label for="txtNome">Seu E-mail:</label><br>
            <input type="email" name="Email" id="txtEmail">
        </div>
        <div>
            Resposta:
            <div>
                <input type="radio" id="rdSim" name="Sim" value="true">
                <label for="rdSim">Sim</label>
            </div>
            <div>
                <input type="radio" id="rdNao" name="Nao" value="false">
                <label for="rdNao">Não</label>
            </div>
        </div>
        <input type="submit" value="Enviar Resposta">
    </form>
</body>
</html>